<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00bfff">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_margin="10dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="COMPARTILHAR PROMO"
            android:textSize="24sp"
            android:layout_marginTop="30px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:textColor="#888888"
            android:textStyle="bold" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#888888"/>

        <Spinner
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:drawSelectorOnTop = "true"
            android:id="@+id/todasMarcas"
            android:background="#f0f0f0"
            android:paddingLeft="20dp"
            />

        <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Nome do Produto"
        android:textSize="24sp"
        android:layout_marginTop="10px"
        android:layout_marginLeft="50px"
        android:layout_marginRight="50px"
        android:textColor="#888888"
        android:textStyle="bold" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#888888"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="90px"
            android:background="#f0f0f0"
            android:text=""
            android:textSize="20sp"
            android:textColor="#888888"
            android:layout_marginBottom="2dp"
            android:id="@+id/prod_nome"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Link do Produto"
            android:textSize="24sp"
            android:layout_marginTop="10px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:textColor="#888888"
            android:textStyle="bold" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#888888"/>

        <EditText
            android:layout_width="fill_parent"
            android:layout_height="90px"
            android:background="#f0f0f0"
            android:text=""
            android:textSize="20sp"
            android:textColor="#888888"
            android:layout_marginBottom="2dp"
            android:id="@+id/prod_link"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Valor do Produto"
            android:textSize="24sp"
            android:layout_marginTop="10px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:textColor="#888888"
            android:textStyle="bold" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:background="#888888"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="90px"
            android:background="#f0f0f0"
            android:hint="R$: "
            android:paddingLeft="20px"
            android:text=""
            android:textSize="25sp"
            android:textColor="#888888"
            android:layout_marginBottom="2dp"
            android:id="@+id/prod_valor"/>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="DescriÃ§ao"
            android:textSize="24sp"
            android:layout_marginTop="10px"
            android:layout_marginLeft="50px"
            android:layout_marginRight="50px"
            android:textColor="#888888"
            android:textStyle="bold" />
        <View
            android:layout_width="wrap_content"
            android:layout_height="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#888888"/>
        <EditText
            android:layout_width="fill_parent"
            android:layout_height="180px"
            android:background="#f0f0f0"
            android:hint=" Descreva o produto aqui "
            android:text=""
            android:textSize="17sp"
            android:textColor="#888888"
            android:scrollbars="vertical"
            android:maxLines="5"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/prod_descricao"/>

    </LinearLayout>
        <Button
            android:id="@+id/compatilhar"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="#0ac60a"
            android:text="Compartilhar"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="20px"
            android:padding="30px"
            android:ellipsize="marquee"/>



</FrameLayout>